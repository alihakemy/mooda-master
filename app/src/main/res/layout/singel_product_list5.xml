<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/List"
    android:layout_width="220dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:background="@drawable/btn_white_gray_3"
    android:layoutDirection="ltr">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent">


        <utils.ProfileImageView
            android:id="@+id/iv_Feeds"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_centerHorizontal="true"
            android:alpha="1"
            android:layout_margin="2dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/def" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_Feeds"
            android:minHeight="70dp">

            <TextView
                android:id="@+id/tv_Cat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="right"
                android:paddingRight="12dp"
                android:text="الألبان"
                android:textColor="#9B9B9B"
                android:textSize="9sp"
                android:visibility="gone"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="right"
                android:layout_below="@+id/tv_Cat"
                android:paddingRight="12dp"
                android:text="طازج من ألبان مراعي بخيرة"
                android:textColor="#000000"
                android:textSize="14sp"
                style="@style/BoldText" />



            <LinearLayout
                android:id="@+id/Price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_weight="4"
                    android:scaleType="fitXY"
                    android:visibility="gone"
                    android:gravity="left|center_vertical"
                    android:src="@mipmap/plus" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingRight="5dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="6.00 د.ك"
                        android:textColor="#9B9B9B"
                        android:visibility="gone"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_MainPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="right"
                        android:layout_weight="1"
                        android:text="6.00 د.ك"
                        android:paddingRight="5dp"
                        android:textColor="#FF4E62"
                        android:textSize="13sp"
                       style="@style/BoldText" />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>