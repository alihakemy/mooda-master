<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/List"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layoutDirection="ltr"
    android:padding="1dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="1dp">


        <utils.ProfileImageView
            android:id="@+id/iv_Feeds"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_wight_gray_radius4"
            android:padding="2dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/def" />

        <TextView
            android:id="@+id/tv_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_toLeftOf="@+id/iv_Feeds"
            android:gravity="right"
            android:paddingRight="12dp"
            android:text="طازج من ألبان مراعي بخيرة"
            android:textColor="#000000"
            android:textSize="14sp"
            style="@style/BoldText" />

        <TextView
            android:id="@+id/tv_MainPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_Title"
            android:layout_gravity="center"
            android:layout_toLeftOf="@+id/iv_Feeds"
            android:gravity="right"
            android:paddingRight="12dp"
            android:text="6.00 د.ك"
            android:textColor="#DB3022"
            android:textSize="13sp"
            style="@style/BoldText" />

        <TextView
            android:id="@+id/tv_BeforeDiscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_MainPrice"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@+id/iv_Feeds"
            android:gravity="right"
            android:paddingLeft="5dp"
            android:paddingRight="12dp"
            android:text="ddd"
            android:textColor="#9B9B9B"
            android:textSize="13sp"
            style="@style/BoldText" />

        <TextView
            android:id="@+id/tv_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_MainPrice"
            android:layout_gravity="right"
            android:layout_marginTop="8dp"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@+id/tv_BeforeDiscount"
            android:background="@drawable/btn_red_discount"
            android:gravity="right"
            android:paddingLeft="15dp"
            android:paddingTop="2dp"
            android:paddingRight="15dp"
            android:paddingBottom="2dp"
            android:text="-10 %"
            android:textColor="#fff"
            android:textSize="12sp"
            style="@style/BoldText" />


    </RelativeLayout>


</FrameLayout>