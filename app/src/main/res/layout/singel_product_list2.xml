<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/List"
    android:layout_width="170dp"
    android:layout_height="320dp"
    android:layout_marginLeft="10dp"
    android:background="#FFF"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    android:paddingBottom="5dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_Feeds"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:alpha="1"
            android:scaleType="fitXY"
            android:src="@mipmap/def" />

        <ImageView
            android:id="@+id/Fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:padding="7dp"
            android:src="@mipmap/non_like" />

        <TextView
            android:id="@+id/tv_discount2"
            style="@style/BoldText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:background="@drawable/btn_red_discount"
            android:gravity="right"
            android:paddingLeft="7dp"
            android:paddingTop="7dp"
            android:paddingRight="7dp"
            android:paddingBottom="5dp"
            android:text="-10 %"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:id="@+id/tv_Title"
                style="@style/LightText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:paddingRight="12dp"
                android:text="طازج من ألبان مراعي بخيرة"
                android:textColor="#000000"
                android:textSize="11sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_Type"
            style="@style/LightText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="right"
            android:paddingRight="12dp"
            android:text="6.00 د.ك"
            android:textColor="#1846C4"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_BeforeDiscount"
            style="@style/BoldText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="right"
            android:paddingRight="12dp"
            android:text="6.00 د.ك"
            android:textColor="#A8A8A8"
            android:textSize="10sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">


            <TextView
                android:id="@+id/tv_MainPrice"
                style="@style/BoldText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="#ca0000"
                android:gravity="center"
                android:padding="3dp"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
